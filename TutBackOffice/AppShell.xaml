<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TutBackOffice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TutBackOffice"
    xmlns:pages="clr-namespace:TutBackOffice.Pages"
    Title="TutBackOffice">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="WhiteSmoke" Padding="20,30">
            <Label Text="Tut Logo"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"/>
        </Grid>
    </Shell.FlyoutHeader>

    <ShellContent
        Title="Live Tracking"
        ContentTemplate="{DataTemplate pages:LiveTrackingPage}"
        Route="LiveTrackingPage" />
    <ShellContent
        Title="Drivers Management"
        ContentTemplate="{DataTemplate pages:DriversManagementPage}"
        Route="DriversManagementPage" />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
